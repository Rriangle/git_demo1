@model IEnumerable<GameSpace.Areas.MemberManagement.Models.UserIntroduceVM>

@{
    ViewData["Title"] = "Index";
    var totalUserId = Model?.Select(m => m.UserId).Distinct().Count() ?? 0;

    // 🟡 取回目前搜尋值以便回填
    int? currentUserId = ViewBag.UserId as int?;
    string currentUserNickName = ViewBag.UserNickName as string;
}

<h1 class="d-flex align-items-center gap-3">
    會員資訊
    <span class="mb-0 fw-normal">(總人數：@totalUserId)</span>
</h1>

<!-- 🟡 搜尋表單（GET） -->
<form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label for="userId" class="form-label">使用者編號</label>
            <input id="userId" name="userId" type="number" class="form-control"
                   value="@(currentUserId?.ToString() ?? "")" placeholder="例如：10000001" />
        </div>
        <div class="col-auto">
            <label for="userNickName" class="form-label">暱稱</label>
            <input id="userNickName" name="userNickName" type="text" class="form-control"
                   value="@(currentUserNickName ?? "")" placeholder="關鍵字" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">搜尋</button>
            <a asp-action="Index" class="btn btn-outline-secondary">清除</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.UserId)</th>
            <th>@Html.DisplayNameFor(m => m.UserNickName)</th>
            <th>@Html.DisplayNameFor(m => m.Gender)</th>
            <th>@Html.DisplayNameFor(m => m.DateOfBirth)</th>
            @* <th>@Html.DisplayNameFor(m => m.IdNumber)</th> *@
            <th>@Html.DisplayNameFor(m => m.Cellphone)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th>@Html.DisplayNameFor(m => m.Address)</th>
            @* <th>@Html.DisplayNameFor(m => m.UserPicture)</th> *@
            @* <th>@Html.DisplayNameFor(m => m.UserIntroduce1)</th> *@
            <th>@Html.DisplayNameFor(m => m.CreateAccount)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="9" class="text-center text-muted">沒有符合條件的資料</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserId</td>
                    <td>@item.UserNickName</td>
                    <td>@item.Gender</td>
                    <td>@item.DateOfBirth</td>
                    @* <td>@item.IdNumber</td> *@
                    <td>@item.Cellphone</td>
                    <td>@item.Email</td>  @* 🟡 修正：移除多餘的右括號 *@
                    <td>@item.Address</td>
                    @* <td>@item.UserPicture</td> *@
                    @* <td>@item.UserIntroduce1</td> *@
                    <td>@item.CreateAccount</td>
                    <td></td>
                </tr>
            }
        }
    </tbody>
</table>

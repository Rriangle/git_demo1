@model IEnumerable<GameSpace.Areas.MemberManagement.Models.UserPermissionVM>

@{
    ViewData["Title"] = "使用者權限列表";
    var currentId = ViewBag.Id as int?;
    var currentNickname = ViewBag.Nickname as string;
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label for="id" class="form-label">使用者編號</label>
            <input id="id" name="id" type="number" class="form-control"
                   value="@(currentId?.ToString() ?? "")" placeholder="例如：10000001" />
        </div>
        <div class="col-auto">
            <label for="nickname" class="form-label">暱稱</label>
            <input id="nickname" name="nickname" type="text" class="form-control"
                   value="@(currentNickname ?? "")" placeholder="關鍵字" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">搜尋</button>
            <a asp-action="Index" class="btn btn-outline-secondary">清除</a>
        </div>
    </div>
</form>

<p class="text-muted">共 @Model.Count() 筆結果。</p>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>使用者編號</th>
            <th>暱稱</th>
            <th>帳號狀態</th>
            <th>商城權限</th>
            <th>訊息權限</th>
            
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="7" class="text-center text-muted">沒有符合條件的資料</td></tr>
        }
        else
        {
            foreach (var row in Model)
            {
                <tr>
                    <td>@row.UserId</td>
                    <td>@row.UserNickName</td>
                    <td>@(row.UserStatus ? "啟用" : "停用")</td>
                    <td>@(row.ShoppingPermission ? "允許" : "不允許")</td>
                    <td>@(row.MessagePermission ? "允許" : "不允許")</td>
                    
                    <td>
                        <a asp-action="Edit"
                           asp-route-id="@row.UserId"
                           asp-route-searchId="@(currentId?.ToString())" @* 🟡 把搜尋條件帶進 Edit *@
                           asp-route-searchNickname="@currentNickname"
                           class="btn btn-sm btn-primary">編輯</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@model GameSpace.Areas.MemberManagement.Models.ManagerRoleAssignVM
@{
    ViewData["Title"] = "調整管理者角色";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- 主鍵：提交使用 -->
    <input type="hidden" asp-for="ManagerId" />

    <div class="mb-3">
        <label class="form-label">@Html.DisplayNameFor(m => m.ManagerId)</label>
        <input class="form-control" value="@Model.ManagerId" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">@Html.DisplayNameFor(m => m.ManagerName)</label>
        <input class="form-control" value="@Model.ManagerName" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="SelectedRoleId" class="form-label"></label>
        <select asp-for="SelectedRoleId" asp-items="Model.Roles" class="form-select">
            <option value="0">-- 請選擇角色 --</option>
        </select>
        <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">儲存</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">返回</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

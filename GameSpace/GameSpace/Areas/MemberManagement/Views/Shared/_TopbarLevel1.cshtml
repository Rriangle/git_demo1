@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
<nav class="navbar navbar-expand-lg navbar-dark shadow-sm custom-bg-dark">
    <div class="container-fluid p-0 d-flex">

        <!-- 左側 GameSpace / 背景區，固定寬度 -->
        <div class="d-flex justify-content-center align-items-center flex-shrink-0" style="width:250px; height:100%;">
            <a class="navbar-brand mb-0 text-white" asp-area="" asp-controller="Home" asp-action="Index">
                GameSpace
            </a>
        </div>

        <!-- 中間導航（整頁換） -->
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav1">
            <ul class="navbar-nav">
                <li class="nav-item mx-2">
                    <a class="nav-link text-white"
                       asp-area="MemberManagement" asp-controller="UserIntroduces" asp-action="Index"
                       asp-route-sidebar="member">
                        會員中心
                    </a>
                </li>
                <li class="nav-item mx-2">
                    <a class="nav-link text-white"
                       asp-area="MemberManagement" asp-controller="ManagerData" asp-action="Index"
                       asp-route-sidebar="admin">
                        管理者中心
                    </a>
                </li>
            </ul>
        </div>



        <!-- 右側使用者選單 -->
        @{
            // 先嘗試從 AdminCookie 認證
            var adminAuth = await Context.AuthenticateAsync("AdminCookie");
            var adminPrincipal = adminAuth.Succeeded ? adminAuth.Principal : null;

            // 若 HttpContext.User 本身就有 IsManager=true，優先採用
            var userHasManager = (User?.Identity?.IsAuthenticated ?? false)
            && User.HasClaim(c => c.Type == "IsManager" && c.Value == "true");
            var principal = userHasManager ? User : adminPrincipal;

            string? adminId = principal?.FindFirstValue(ClaimTypes.NameIdentifier);
            string? adminName = principal?.Identity?.Name;

            var adminRoles = principal?.Claims
            .Where(c => c.Type == ClaimTypes.Role || c.Type.Equals("role", StringComparison.OrdinalIgnoreCase))
            .Select(c => (c.Value ?? "").Trim())
            .Where(v => !string.IsNullOrWhiteSpace(v))
            .Distinct()
            .ToList() ?? new List<string>();

            // 取第一個角色做徽章顯示（可選）
            var firstRole = adminRoles.FirstOrDefault();
        }

        <div class="d-flex align-items-center me-3">
            @if (principal != null)
            {
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" id="userDropdown1" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="d-none d-lg-inline me-2">@(!string.IsNullOrWhiteSpace(adminName) ? adminName : "未登入")</span>
                            @* @if (!string.IsNullOrWhiteSpace(firstRole))
                            {
                                <span class="badge text-bg-secondary me-2">@firstRole</span>
                            } *@
                            <img class="img-profile rounded-circle" src="~/lib/image/undraw_profile.svg" style="width:30px; height:30px; object-fit:cover;">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown1" style="min-width: 260px;">
                            <li>
                                <h6 class="dropdown-header">已登入</h6>
                            </li>
                            <li>
                                <span class="dropdown-item-text small text-muted">
                                    <i class="fa-solid fa-id-badge me-1"></i> ID：@adminId
                                </span>
                            </li>
                            <li>
                                <span class="dropdown-item-text  text-muted d-flex flex-wrap align-items-center">
                                    <i class="fa-solid fa-shield-halved "></i> 角色：
                                    @if (adminRoles.Count > 0)
                                    {
                                        foreach (var r in adminRoles)
                                        {
                                            <span class="badge text-black ">@r</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-black ">（無）</span>
                                    }
                                </span>
                            </li>

                            <li><hr class="dropdown-divider" /></li>

                            @* 顯示/修改入口（請依你專案實際路由調整） *@
                            @* <li>
                                <a class="dropdown-item" asp-area="MemberManagement" asp-controller="ManagerData" asp-action="Details" asp-route-id="@adminId">
                                    <i class="fa-solid fa-user me-2"></i> 我的資料
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="MemberManagement" asp-controller="ManagerData" asp-action="Edit" asp-route-id="@adminId">
                                    <i class="fa-solid fa-user-pen me-2"></i> 修改資料
                                </a>
                            </li> *@
                            @* 若有變更密碼頁，放這裡（沒有就先註解） *@
                            @* <li>
                                <a class="dropdown-item" asp-controller="Login" asp-action="ChangePassword">
                                    <i class="fa-solid fa-key me-2"></i> 變更密碼
                                </a>
                            </li> *@

                            <li><hr class="dropdown-divider" /></li>

                            <li>
                                <form asp-area="" asp-controller="Login" asp-action="Logout" method="post" class="px-2">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fa-solid fa-right-from-bracket me-2"></i> 登出
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            }
            else
            {
                <a asp-controller="Login" asp-action="Index" class="btn btn-sm btn-outline-light">
                    <i class="fa-solid fa-right-to-bracket me-1"></i> 後台登入
                </a>
            }
        </div>

    </div>
</nav>

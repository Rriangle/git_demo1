@model IEnumerable<GameSpace.Areas.social_hub.Models.ViewModels.NotificationViewModel>

@{
    ViewData["Title"] = "通知列表";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-secondary">目前沒有通知。</div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>通知ID</th>
                                <th>標題</th>
                                <th>內容</th>
                                <th>來源</th>
                                <th>動作</th>
                                <th>發送者</th>
                                <th>建立時間</th>
                                <th>已讀</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var n in Model)
                            {
                                <tr>
                                    <td>@n.NotificationId</td>
                                    <td>@(n.NotificationTitle ?? "未設定")</td>
                                    <td>@(n.NotificationMessage ?? "")</td>
                                    <td>@(n.SourceName ?? "未設定")</td>
                                    <td>@(n.ActionName ?? "未設定")</td>
                                    <td>@(n.SenderName ?? "系統")</td>
                                    <td>@n.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@(n.IsRead ? "是" : "否")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-3 d-flex">
        <a asp-action="Create" class="btn btn-primary mr-2">新增通知</a>
        <a asp-action="TestNotification" class="btn btn-outline-secondary">快速新增測試通知</a>
    </div>
</div>

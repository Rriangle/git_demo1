@model IReadOnlyList<GameSpace.Areas.social_hub.Models.ViewModels.SupportMessageVM>

@{
    // 先在檔案頂端計算分頁參數，避免在 @if 區塊內再開 @{} 造成 Razor 語法衝突
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 30);
    var total = (int)(ViewBag.Total ?? (Model?.Count ?? 0));
    var totalPages = pageSize <= 0 ? 1 : (int)Math.Ceiling((double)total / pageSize);
    var ticketId = (Model != null && Model.Count > 0) ? Model[0].TicketId : 0;
}

@if (Model == null || Model.Count == 0)
{
    <div class="text-muted">目前沒有訊息。</div>
}
else
{
    <div class="d-flex flex-column gap-2">
        @foreach (var m in Model)
        {
            var mine = m.IsMine;
            <div class="d-flex @(mine ? "justify-content-end" : "justify-content-start")">
                <div class="p-2 rounded-3 shadow-sm @(mine ? "bg-primary text-white" : "bg-light")" style="max-width: 80%;">
                    <div class="small text-muted mb-1">
                        @if (m.SenderUserId != null)
                        {
                            <span class="badge bg-secondary me-1">使用者</span>
                        }
                        else if (m.SenderManagerId != null)
                        {
                            <span class="badge bg-warning text-dark me-1">客服@(mine ? "(我)" : "")</span>
                        }
                        else
                        {
                            <span class="badge bg-dark me-1">系統</span>
                        }
                        <span>@m.SentAt.ToString("yyyy/MM/dd HH:mm")</span>
                    </div>
                    <div style="white-space:pre-wrap;">@m.MessageText</div>
                </div>
            </div>
        }
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-3" aria-label="Message pagination">
            <ul class="pagination mb-0">
                <li class="page-item @(page > 1 ? "" : "disabled")">
                    <a class="page-link" href="@Url.Action("MessageList", new { id = ticketId, page = page - 1 })">上一頁</a>
                </li>
                <li class="page-item @(page < totalPages ? "" : "disabled")">
                    <a class="page-link" href="@Url.Action("MessageList", new { id = ticketId, page = page + 1 })">下一頁</a>
                </li>
            </ul>
        </nav>
    }
}

@{
    ViewData["Title"] = "測試登入狀態";
    var msg = (string?)ViewData["msg"] ?? "";
    var id = (string?)ViewData["id"] ?? "";
    var kind = (string?)ViewData["kind"] ?? "";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(msg))
{
    <div class="alert alert-info">@msg</div>
}

<div class="card">
    <div class="card-body">
        <p><strong>gs_id：</strong> @id</p>
        <p><strong>gs_kind：</strong> @kind</p>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-outline-primary"
       href="@Url.Action("LoginUser", "Home", new { area = "social_hub", uid = 10000012 })">
        假登入 User（#10000012）
    </a>
    <a class="btn btn-outline-primary"
       href="@Url.Action("LoginUser", "Home", new { area = "social_hub", uid = 10000001 })">
        假登入 User（#10000001）
    </a>
    <a class="btn btn-outline-secondary"
       href="@Url.Action("LoginManager", "Home", new { area = "social_hub", mid = 30000001 })">
        假登入 Manager（#30000001）
    </a>
    <a class="btn btn-outline-secondary"
       href="@Url.Action("LoginManager", "Home", new { area = "social_hub", mid = 30000099 })">
        假登入 Manager（#30000099）
    </a>
    <a class="btn btn-outline-secondary"
       href="@Url.Action("LoginManager", "Home", new { area = "social_hub", mid = 30000100 })">
        假登入 Manager（#30000100）
    </a>
    <a class="btn btn-outline-danger"
       href="@Url.Action("Logout", "Home", new { area = "social_hub" })">
        登出
    </a>
</div>

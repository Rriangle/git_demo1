@model IEnumerable<GameSpace.Models.Mute>
@{
    ViewData["Title"] = "穢語設定";
}

<div class="card shadow mb-4">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-3">
            <h5 class="m-0">@ViewData["Title"]</h5>
            <span class="badge bg-secondary">列表</span>
        </div>
        <div class="d-flex align-items-center gap-2">
            @if (ViewBag.IsAdmin == true)
            {
                <a asp-area="social_hub" asp-controller="Mutes" asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> 新增
                </a>
                <form asp-area="social_hub" asp-controller="Mutes" asp-action="ReloadCache" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-rotate-right"></i> 重載遮蔽詞庫
                    </button>
                </form>
            }
        </div>

    </div>

    <div class="card-body">
        @if (TempData["Toast"] is string toast)
        {
            <div class="alert alert-success d-flex align-items-center" role="alert">
                <i class="fas fa-check-circle me-2"></i> @toast
            </div>
        }

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mb-0">目前沒有資料。</div>
        }
        else
        {
            <div class="table-responsive">
                <table id="mutesTable" class="table table-striped table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>名稱</th>
                            <th>啟用</th>
                            <th>建立時間</th>
                            <th>管理員</th>
                            <th style="width:160px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.MuteName</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">啟用</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">停用</span>
                                    }
                                </td>
                                <td>@(item.CreatedAt?.ToString("yyyy/MM/dd HH:mm") ?? "-")</td>
                                <td>@(item.ManagerId?.ToString() ?? "-")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-area="social_hub" asp-controller="Mutes" asp-action="Details" asp-route-id="@item.MuteId" class="btn btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (ViewBag.IsAdmin == true)
                                        {
                                            <a asp-area="social_hub" asp-controller="Mutes" asp-action="Edit" asp-route-id="@item.MuteId" class="btn btn-outline-primary">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                            <a asp-area="social_hub" asp-controller="Mutes" asp-action="Delete" asp-route-id="@item.MuteId" class="btn btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Styles {
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script>
        $(function () {
            $("#mutesTable").dataTable({
                pageLength: 10,
                lengthChange: false,
                order: [[2, "desc"]],
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/zh-HANT.json"
                }
            });
        });
    </script>
}

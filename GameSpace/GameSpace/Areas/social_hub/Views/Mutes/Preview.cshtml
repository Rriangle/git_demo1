@{
    ViewData["Title"] = "遮蔽詞預覽";
    var input = ViewBag.Input as string;
    var output = ViewBag.Output as string;
}

<div class="card shadow">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-3">
            <h5 class="m-0">@ViewData["Title"]</h5>
            <span class="badge bg-info">測試</span>
        </div>
        <a asp-area="social_hub" asp-controller="Mutes" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> 返回
        </a>
    </div>

    <div class="card-body">
        <form asp-action="Preview" method="post" class="mb-4">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">輸入要測試的文字</label>
                <textarea name="text" class="form-control" rows="4" placeholder="在此貼上訊息內容...">@input</textarea>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-wand-magic-sparkles"></i> 立即測試
                </button>
                <a asp-area="social_hub" asp-controller="Mutes" asp-action="ReloadCache"
                   onclick="event.preventDefault(); document.getElementById('reload-form').submit();" class="btn btn-outline-secondary">
                    <i class="fas fa-rotate-right"></i> 重載遮蔽詞庫
                </a>
            </div>
        </form>

        <form id="reload-form" asp-area="social_hub" asp-controller="Mutes" asp-action="ReloadCache" method="post" class="d-none">
            @Html.AntiForgeryToken()
        </form>

        @if (!string.IsNullOrWhiteSpace(input))
        {
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header">
                            <strong>原始輸入</strong>
                        </div>
                        <div class="card-body">
                            <pre class="mb-0" style="white-space:pre-wrap">@input</pre>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-success">
                        <div class="card-header">
                            <strong>過濾結果</strong>
                            <span class="badge bg-success ms-2">已套用</span>
                        </div>
                        <div class="card-body">
                            <pre class="mb-0" style="white-space:pre-wrap">@output</pre>
                            <div class="text-muted small mt-2">預設替代字樣：<code>【封鎖詞句】</code></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

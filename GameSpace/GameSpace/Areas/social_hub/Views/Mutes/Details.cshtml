@model GameSpace.Models.Mute
@{
    ViewData["Title"] = "穢語明細";
}

<div class="card shadow">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-3">
            <h5 class="m-0">@ViewData["Title"]</h5>
            <span class="badge bg-info">檢視</span>
        </div>
        <div class="d-flex gap-2">
            <a asp-area="social_hub" asp-controller="Mutes" asp-action="Edit" asp-route-id="@Model.MuteId" class="btn btn-primary btn-sm">
                <i class="fas fa-pen"></i> 編輯
            </a>
            <a asp-area="social_hub" asp-controller="Mutes" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                返回
            </a>
        </div>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.MuteId</dd>

            <dt class="col-sm-3">名稱</dt>
            <dd class="col-sm-9 fw-semibold">@Model.MuteName</dd>

            <dt class="col-sm-3">啟用狀態</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">啟用</span>
                }
                else
                {
                    <span class="badge bg-secondary">停用</span>
                }
            </dd>

            <dt class="col-sm-3">建立時間</dt>
            <dd class="col-sm-9">@(Model.CreatedAt?.ToString("yyyy/MM/dd HH:mm") ?? "-")</dd>

            <dt class="col-sm-3">管理員</dt>
            <dd class="col-sm-9">@(Model.ManagerId?.ToString() ?? "-")</dd>
        </dl>
    </div>
</div>

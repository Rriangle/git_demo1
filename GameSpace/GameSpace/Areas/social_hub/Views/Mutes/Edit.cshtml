@model GameSpace.Models.Mute
@{
    ViewData["Title"] = "編輯穢語";
}

<div class="card shadow">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-3">
            <h5 class="m-0">@ViewData["Title"]</h5>
            <span class="badge bg-warning text-dark">編輯</span>
        </div>
        <a asp-area="social_hub" asp-controller="Mutes" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> 返回
        </a>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input asp-for="MuteId" type="hidden" />

            <div class="mb-3">
                <label asp-for="MuteName" class="form-label"></label>
                <input asp-for="MuteName" class="form-control" />
                <span asp-validation-for="MuteName" class="text-danger"></span>
            </div>

            <div class="form-check form-switch mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">啟用</label>
            </div>

            @* 只顯示，不讓改 *@
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">建立時間</label>
                    <input class="form-control" value="@(Model.CreatedAt?.ToString("yyyy/MM/dd HH:mm") ?? "-")" disabled />
                </div>
                <div class="col-md-6">
                    <label class="form-label">管理員</label>
                    <input class="form-control" value="@(Model.ManagerId?.ToString() ?? "-")" disabled />
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i> 儲存變更
                </button>
                <a asp-area="social_hub" asp-controller="Mutes" asp-action="Index" class="btn btn-outline-secondary">
                    取消
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model GameSpace.Areas.OnlineStore.ViewModels.ShippingAddressEditViewModels
@{
    ViewData["Title"] = "編輯收件地址";
}
<h5 class="mb-3">編輯收件地址</h5>

<form asp-area="OnlineStore" asp-controller="OrderDetail" asp-action="EditAddress" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="OrderId" />

    <div class="mb-3">
        <label asp-for="Recipient" class="form-label" >收件人 :</label>
        <input asp-for="Recipient" class="form-control " style="width:40%" />
        <span asp-validation-for="Recipient" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">行動電話 :</label>
        <input asp-for="Phone" class="form-control " style="width:40%" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-2 mb-3">
            <label asp-for="Zipcode" class="form-label">郵遞區號 :</label>
            <input asp-for="Zipcode" class="form-control" />
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </div>
        <div class="col-md-2 mb-3">
            <label asp-for="City" class="form-label">城市 :</label>
            <input asp-for="City" class="form-control " />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-md-2 mb-3">
            <label asp-for="Country" class="form-label">國家</label>
            <input asp-for="Country" class="form-control"  />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Address1" class="form-label">地址</label>
        <input asp-for="Address1" class="form-control" style="width:50%" />
        <span asp-validation-for="Address1" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address2" class="form-label">地址備註</label>
        <input asp-for="Address2" class="form-control" style="width:50%" />
        <span asp-validation-for="Address2" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary"
           asp-area="OnlineStore" asp-controller="OrderDetail" asp-action="Detail"
           asp-route-orderId="@Model.OrderId">取消</a>
        <button type="submit" class="btn btn-primary">儲存</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

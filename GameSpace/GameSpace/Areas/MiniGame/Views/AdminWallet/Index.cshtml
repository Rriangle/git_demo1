@{
    ViewData["Title"] = "會員點數管理";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">會員點數管理</h1>
    </div>

    <!-- 功能按鈕 -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("QueryPoints", "AdminWallet")" class="btn btn-primary">
                    <i class="fas fa-search"></i> 查詢會員點數
                </a>
                <a href="@Url.Action("QueryCoupons", "AdminWallet")" class="btn btn-success">
                    <i class="fas fa-ticket-alt"></i> 查詢會員商城優惠券
                </a>
                <a href="@Url.Action("QueryEVouchers", "AdminWallet")" class="btn btn-info">
                    <i class="fas fa-gift"></i> 查詢會員電子禮券
                </a>
                <a href="@Url.Action("AdjustPoints", "AdminWallet")" class="btn btn-warning">
                    <i class="fas fa-edit"></i> 調整會員點數
                </a>
                <a href="@Url.Action("AdjustCoupons", "AdminWallet")" class="btn btn-secondary">
                    <i class="fas fa-edit"></i> 調整會員商城優惠券
                </a>
                <a href="@Url.Action("AdjustEVouchers", "AdminWallet")" class="btn btn-dark">
                    <i class="fas fa-edit"></i> 調整會員電子禮券
                </a>
                <a href="@Url.Action("QueryHistory", "AdminWallet")" class="btn btn-light">
                    <i class="fas fa-history"></i> 查詢會員收支明細
                </a>
            </div>
        </div>
    </div>

    <!-- 內容區域 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">會員點數系統</h6>
                </div>
                <div class="card-body">
                    <p>請選擇上方功能按鈕來管理會員點數相關功能。</p>
                </div>
            </div>
        </div>
    </div>
</div>

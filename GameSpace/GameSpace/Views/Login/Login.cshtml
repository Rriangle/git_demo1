@model GameSpace.Controllers.LoginController.LoginInput
@{
    ViewData["Title"] = "管理者登入";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Index" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="ManagerAccount" class="form-label"></label>
        <input asp-for="ManagerAccount" class="form-control" autocomplete="username" />
        <span asp-validation-for="ManagerAccount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ManagerPassword" class="form-label"></label>
        <input asp-for="ManagerPassword" class="form-control" autocomplete="current-password" />
        <span asp-validation-for="ManagerPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">登入</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
